---
import CreateButton from './CreateButton.vue'
interface Props {
    title: string;
    description: string;
    type: 'formal' | 'informal';
}

const { title, description, type } = Astro.props;
---

<div class={`bg-base-100 p-8 rounded-lg text-center flex flex-col h-full shadow-lg ${type === 'formal' ? 'border-2 border-primary/30' : 'border-2 border-secondary/30'}`}>
    <h2 class={`font-medium text-xl mb-4 ${type === 'formal' ? 'text-primary' : 'text-secondary'}`}>{title}</h2>
    <p class="text-accent/80 mb-4">{description}</p>
    <ul class="text-left mb-8 flex-grow">
    </ul>

    <CreateButton client:load type={type} />
</div>