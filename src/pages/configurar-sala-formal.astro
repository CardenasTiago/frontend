---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Navbar.astro';
import BackButton from '../components/BackButton2.vue';
import FormButton from '../components/FormButton.vue';  
---
<Layout title="Configurar sala formal - Suffgo">
    <main class="max-w-6xl mx-auto p-4 bg-base-100 min-h-screen">
        <Header />

        <div class="bg-white p-8 rounded-xl shadow-lg max-w-4xl mx-auto">
            <div class="mb-8">
                <BackButton client:load />
            </div>

            <div class="max-w-2xl mx-auto h-[240px] bg-gray-200 mb-8 rounded-lg flex items-center justify-center text-lg">
                <input type="file" class="file-input file-input-ghost w-full max-w-xs" />
            </div>

            <form class="space-y-8">
                <div>
                    <label class="form-control w-full">
                        <div class="label">
                            <span class="label-text text-accent/80 text-lg">Nombre de la sala</span>
                        </div>
                        <input 
                            type="text" 
                            placeholder="Nombre de la sala"
                            class="input input-bordered w-full bg-secondary/10 border-secondary/20 h-12 text-lg" 
                        />
                    </label>
                </div>

                <div>
                    <label class="form-control w-full">
                        <div class="label">
                            <span class="label-text text-accent/80 text-lg">Descripción</span>
                        </div>
                        <textarea 
                            class="textarea textarea-bordered w-full bg-secondary/10 border-secondary/20 text-lg" 
                            rows="4" 
                            placeholder="Agregue una descripción"
                        ></textarea>
                    </label>
                </div>

                <div class="grid grid-cols-2 gap-6">
                    <div>
                    <label class="form-control w-full">
                        <div class="label">
                        <span class="label-text text-accent/80 text-lg">Fecha</span>
                        </div>
                        <input 
                        type="date" 
                        class="input input-bordered w-full bg-secondary/10 border-secondary/20 h-12 text-lg" 
                        />
                    </label>
                    </div>

                    <div>
                    <label class="form-control w-full">
                        <div class="label">
                        <span class="label-text text-accent/80 text-lg">Hora</span>
                        </div>
                        <input 
                        type="time" 
                        class="input input-bordered w-full bg-secondary/10 border-secondary/20 h-12 text-lg" 
                        />
                    </label>
                    </div>
                </div>

                <div>
                    <label class="form-control w-full">
                    <div class="label">
                        <span class="label-text text-accent/80 text-lg">Privacidad</span>
                    </div>
                    <select class="select select-bordered w-full bg-secondary/10 border-secondary/20 h-12 text-lg">
                        <option disabled selected>Seleccione la privacidad de la sala</option>
                        <option>Pública</option>
                        <option>Privada</option>
                    </select>
                    </label>
                </div>

                <div>
                    <label class="form-control w-full">
                    <div class="label">
                        <span class="label-text text-accent/80 text-lg">Administrador</span>
                    </div>
                    <input 
                        type="text" 
                        value="" 
                        disabled 
                        class="input input-bordered w-full bg-secondary/10 border-secondary/20 h-12 text-lg" 
                    />
                    </label>
                </div>
        
                <div class="grid grid-cols-2 gap-6 pt-4">
                    <a href="/propuestas" class="w-full">
                    <FormButton client:load variant="secondary">Agregar propuesta</FormButton>
                    </a>
                    <FormButton client:load variant="primary">Guardar</FormButton>
                </div>
            </form>
        </div>
    </main>
</Layout>

<style>
    main {
        min-height: 100vh;
        background-color: #f9fafb;
    }
</style>
