---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Navbar.astro';
import BackButton from '../components/BackButton2.vue';
import ProposalList from '../components/ProposalList.vue';


const mockProposals = [
    { id: 1, title: 'Propuesta 1' },
    { id: 2, title: 'Propuesta 2' },
    { id: 3, title: 'Propuesta 3' },
];
---

<Layout title="Propuestas - Suffgo">
    <main class="max-w-6xl mx-auto p-4 bg-base-100 min-h-screen">
        <Header />
    
        <div class="bg-white p-8 rounded-xl shadow-lg">
            <div class="mb-6">
                <BackButton client:load />
        </div>

        <h1 class="text-2xl font-bold text-primary mb-6 text-center">Propuestas</h1>

        <ProposalList :proposals="mockProposals" client:load />
        </div>
    </main>
</Layout>

<style>
    main {
        min-height: 100vh;
        background-color: #f9fafb;
}
</style>