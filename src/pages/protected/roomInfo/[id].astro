---
import RoomInfo from '../../../components/room/RoomInfo.vue';
import ProtectedRoute from '../../../components/authentication/ProtectedRoute.vue';
import Layout from '../../../layouts/Layout.astro';
const { id } = Astro.params;
---

<Layout title="Sala">
    <ProtectedRoute client:load />

    <div class="mt-5 place-items-center min-h-fit flex h-screen">
      <div class="h-fit p-10 main-container bg-white">
        <RoomInfo client:load roomId={id} />
      </div>
  </div>

</Layout>


    

