---
import Layout from '../../layouts/Layout.astro'
import BackButton from '../../components/reusable/BackButton.vue';
import ProposalList from '../../components/proposal/ProposalList.vue';
---

<Layout title="Suffgo | propuestas">
    <main class="w-full min-h-screen bg-neutral">
        <div class="w-full px-4 sm:px-6 md:px-8 lg:px-[160px] max-w-[1440px] mx-auto">

        <div class="bg-neutral p-4 sm:p-6 md:p-8 rounded-xl shadow-lg">
            <div class="mb-6">
                <BackButton client:load roomId={Astro.url.searchParams.get('id') ?? ''} />
            </div>

            <h1 class="text-xl sm:text-2xl font-bold text-primary mb-4 sm:mb-6 text-center">Propuestas</h1>

            <ProposalList client:load roomId={Astro.url.searchParams.get('id') ?? ''} />
            </div>
        </div>
    </main>
</Layout>