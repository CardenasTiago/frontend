---
import Layout from "../../layouts/Layout.astro";
import ProtectedRoute from "../../components/authentication/ProtectedRoute.vue";
import JoinByCode from "../../components/room/JoinByCode.vue";
---

<Layout title="Menu">
    <ProtectedRoute client:load>
        <div class="min-h-[90vh] flex items-center justify-center">
            <div class="h-fit p-10 main-container bg-base-100">
                <div class="text-center items-center">
                    <h1>Unirse a sala</h1>
                </div>
                <div class="text-center items-center">
                    <a class="btn btn-primary m-4 mt-10 align-baseline">
                        <p>Escanear codigo QR</p>
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path fill="currentColor" d="M9.5 6.5v3h-3v-3zM11 5H5v6h6zm-1.5 9.5v3h-3v-3zM11 13H5v6h6zm6.5-6.5v3h-3v-3zM19 5h-6v6h6zm-6 8h1.5v1.5H13zm1.5 1.5H16V16h-1.5zM16 13h1.5v1.5H16zm-3 3h1.5v1.5H13zm1.5 1.5H16V19h-1.5zM16 16h1.5v1.5H16zm1.5-1.5H19V16h-1.5zm0 3H19V19h-1.5zM22 7h-2V4h-3V2h5zm0 15v-5h-2v3h-3v2zM2 22h5v-2H4v-3H2zM2 2v5h2V4h3V2z"/></svg>
                    </a>
                </div>

                <div class="text-center items-center">
                    <h2 class="mt-8">Unirse con codigo</h2>
                </div>

                <div class="mt-5">
                    <JoinByCode client:load/>
                </div>
            </div>
        </div>
    </ProtectedRoute>
</Layout>

<style>
a {
    @apply text-accent;
    width: 15rem;
}

h1 {
    font-weight: 600;
}

.main-container {
    border-radius: 15px;
    box-shadow:
        rgba(60, 64, 67, 0.3) 0px 1px 2px 0px,
        rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;
}
</style>
