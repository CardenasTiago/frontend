---
import Layout from "../../layouts/Layout.astro";
import ProtectedRoute from "../../components/authentication/ProtectedRoute.vue";
import JoinByCode from "../../components/room/JoinByCode.vue";
---

<Layout title="Menu">
    <ProtectedRoute client:load>
        <div class="min-h-[80vh] flex items-center justify-center">
            <div class="h-fit p-10 main-container bg-base-100">
                <div class="text-center items-center">
                    <h1>Unirse a sala</h1>
                </div>
                <div class="text-center items-center">
                    <a class="btn btn-primary mb-4 mt-10">Escanear codigo QR</a>
                </div>

                <div class="text-center items-center">
                    <h2 class="mt-8">Unirse con codigo</h2>
                </div>

                <div class="mt-5">
                    <JoinByCode client:load/>
                </div>
            </div>
        </div>
    </ProtectedRoute>
</Layout>

<style>
a {
    @apply text-accent;
    width: 15rem;
}

h1 {
    font-weight: 600;
}

.main-container {
    border-radius: 15px;
    box-shadow:
        rgba(60, 64, 67, 0.3) 0px 1px 2px 0px,
        rgba(60, 64, 67, 0.15) 0px 2px 6px 2px;
}
</style>
