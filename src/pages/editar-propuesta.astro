---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Navbar.astro';
import EditProposalForm from '../components/EditProposalForm.vue';
---

<Layout title="Editar propuesta - Suffgo">
    <main class="max-w-6xl mx-auto p-4 bg-base-100 min-h-screen">
        <Header />

        <div class="grid grid-cols-12 gap-6">
            <div class="col-span-12">
                <div class="mb-8"></div>
                    <EditProposalForm client:load />
                </div>
            </div>
        </div>
</Layout>

<style>
    main {
        min-height: 100vh;
        background-color: #f9fafb;
    }
</style>