---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
---

<Layout title="Suffgo | Sobre Nosotros" hideHeader={true}>
  <main
    class="min-h-screen flex flex-col"
    style="background: radial-gradient(circle, rgba(111,47,189,1) 0%, rgba(18,2,31,1) 100%);"
  >
    <!-- Navbar -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-[252525]/80 backdrop-blur-sm">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between h-16">
            <div class="flex-shrink-0">
              <a href="/" class="text-[#CFCED9] text-2xl font-bold hover:text-white transition-colors">
                Suffgo
              </a>
            </div>
          </div>
        </div>
      </nav>

    <div class="pt-32 pb-16 max-w-7xl mx-auto px-4 h-screen items-center justify-center">
      <h1
        class="text-4xl sm:text-5xl font-mono text-[#CFCED9] text-center mb-12 scroll-reveal"
        style="text-shadow: 2px 2px 6px rgba(0,0,0,0.3);"
      >
        Conoce a los creadores
      </h1>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-12">
        {
          [
            "Tiago Cardenas",
            "Constanza Benedetti",
            "Marcos Soto",
            "Ignacio Sanchez",
          ].map((name) => (
            <div class="text-center space-y-4 scroll-reveal">
              <div class="w-32 h-32 mx-auto bg-secondary/20 rounded-full flex items-center justify-center shadow-lg">
                <Icon
                  name="ic:baseline-person"
                  class="w-16 h-16 text-[#CFCED9]"
                />
              </div>
              <p class="text-lg font-mono text-[#CFCED9]">{name}</p>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gradient-to-r from-primary to-neutral text-accent mt-10">
        <div class="max-w-7xl mx-auto px-6 py-10 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
          <!-- Logo & Tagline -->
          <div class="space-y-2">
            <a href="/" class="text-2xl font-bold text-accent hover:text-primary transition-colors">
              Suffgo
            </a>
            <p class="text-sm">
              Votaciones en tiempo real, fáciles y seguras.
            </p>
          </div>
          <!-- Enlaces -->
          <div>
            <h4 class="font-semibold mb-2">Enlaces</h4>
            <ul class="space-y-1 text-sm">
              <li><a href="/features" class="hover:underline">Características</a></li>
              <li><a href="/about" class="hover:underline">Sobre nosotros<a/></li>
            </ul>
          </div>
          <!-- Legal -->
          <div>
            <h4 class="font-semibold mb-2">Legal</h4>
            <ul class="space-y-1 text-sm">
              <li><a href="/terms" class="hover:underline">Términos de Uso</a></li>
              <li><a href="/privacy" class="hover:underline">Política de Privacidad</a></li>
            </ul>
          </div>
      
        <div class=" mt-6 pt-4 text-center text-xs">
          &copy; {new Date().getFullYear()} Suffgo. Todos los derechos reservados.
        </div>
      </footer>
  </main></Layout
>
